<?xml version="1.0"?>
<CompanyManager>
	<CompanyType name="Private" class="net.sf.rails.game.PrivateCompany">
		<ClosingConditions>
            <Phase>5</Phase>
		</ClosingConditions>
		<Tradeable toCompany="yes" lowerPriceFactor="0.5" upperPriceFactor="2.0"/>
		<Tradeable toPlayer="yes"/>	
	</CompanyType>
	<CompanyType name="Public" class="net.sf.rails.game.PublicCompany">
		<CanBuyPrivates/>
		<PoolPaysOut/>
		<Float percentage="60"/>
		<ShareUnit percentage="10"/>
		<BaseTokens>
			<!-- HomeBase lay options: "whenStarted", "whenFloated", "firstOR" (default) -->
			<HomeBase lay="firstOR"/>
			<LayCost method="phase" cost="40,70,100"/>
		</BaseTokens>
		<Certificate type="President" shares="2"/>
		<Certificate shares="1" number="8"/>
		<Trains limit="4,3,2"/>
        <CanUseSpecialProperties/>
 	</CompanyType>
	<Company name="CTDC" type="Private" basePrice="20" revenue="5"
			longname="Cape Town Dock Company">
	</Company>
	<Company name="GPCC" type="Private" basePrice="40" revenue="10"
			longname="George Pauling Construction Company">
		<SpecialProperties>
			<SpecialProperty condition="ifOwnedByCompany" when="tileLayingStep" class="net.sf.rails.game.special.SpecialTileLay">
				<SpecialTileLay colour="yellow" extra="yes" free="yes"/>
			</SpecialProperty>
		</SpecialProperties>
		<Closing condition="ifexercised"/>
	</Company>
	<Company name="MRC" type="Private" basePrice="70" revenue="15"
		longname="Military Railroad Commission">
		<SpecialProperties>
			<SpecialProperty condition="ifOwnedByCompany" when="tileLayingStep" class="net.sf.rails.game.special.SpecialTileLay">
				<SpecialTileLay extra="yes" free="no" />
			</SpecialProperty>
		</SpecialProperties>
		<Closing condition="ifexercised"/>
	</Company>
	<Company name="KDMC" type="Private" basePrice="110" revenue="20"
		longname="Kimberley Diamond Mine Corporation">
		<PreventClosing condition="doesNotClose"/>
	</Company>
	<Company name="JGMC" type="Private" basePrice="160" revenue="25"
		longname="Johannesberg Gold Mining Contract">
		<PreventClosing condition="doesNotClose"/>
	</Company>
	<Company name="CTR" type="Private" basePrice="220" revenue="30"
		longname="Cape Town Railway">
		<Info key="ComesWithPresidency" parm="B&amp;O,20"/>
		<Tradeable toCompany="no"/>
	</Company>
	
	<!-- Note two supported colour specification formats:
	     RGB decimal with commas and RGB hexadecimal without commas -->
	<Company name="WR" type="Public" tokens="2" fgColour="000000" bgColour="60E060"
			longname="Wynberg Railway">
		<Home hex="E23"/>
	</Company>	     
	<Company name="CT" type="Public" tokens="3" fgColour="255,255,255" bgColour="0,0,255"
			longname="Cape Town Railway">
		<FirstTrainCloses type="Private" name="CTR"/>
		<Home hex="I15"/>
	</Company>
	<Company name="PE" type="Public" tokens="3" fgColour="000000" bgColour="A0E0FF"
			longname="Port Elizabeth &amp; Uitenhage Railway">
			<Home hex="F6"/>
	</Company>
	<Company name="CM" type="Public" tokens="4" fgColour="FFFFFF" bgColour="FF0000"
			longname="Cape Midland Railway">
		<Home hex="A19"/>
	</Company>
	<Company name="DR" type="Public" tokens="3" fgColour="000000" bgColour="FFFF00"
			longname="Durban Railway">
		<Home hex="E11" />
	</Company>
   	<Company name="NS" type="Public" tokens="4" fgColour="FFFFFF" bgColour="000000"
			longname="Netherlands Cout Africa Railway">
		<Home hex="E19"/>
	</Company>
	<StartPacket roundClass="net.sf.rails.game.StartRound_1830">
		<Bidding initial="5" minimum="5" increment="1"/>
		<Item name="CTTDC" type="Private" basePrice="20"/>
		<Item name="GPCC" type="Private" basePrice="40"/>
		<Item name="MRC" type="Private" basePrice="70"/>
		<Item name="KDMC" type="Private" basePrice="110"/>
		<Item name="JGMC" type="Private" basePrice="160"/>
    	<Item name="CTR" type="Private" basePrice="220">
			<SubItem name="CT" type="Public" president="yes"/>
		</Item>
	</StartPacket>
</CompanyManager>
